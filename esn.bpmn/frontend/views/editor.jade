body(ng-app='esn.bpmn', ng-controller='bpmnController')
    #editor
        #js-drop-zone.content
            .message.intro
                .note
                    | Drop BPMN diagram from your desktop or
                    a#js-create-diagram(ng-click='initDiagram()')  create a new diagram
                    |  to get started.
            #js-canvas.canvas
            #js-properties-panel
        div
            ul.buttons.opacity-buttons
                li
                    input.js-upload-diagram(ng-model='photo', onchange='angular.element(this).scope().file_changed(this)', type='file', accept='text/xml')
                li
                    a(ng-click='saveXML()', href='', title='Save')
                        | Save local
                li
                    a(ng-click='showModal()', href='', title='List')
                        span.glyphicon.glyphicon-th-list
                        | List
                li
                    a(ng-click='saveXMLServer()', href='', title='Save')
                        span.glyphicon.glyphicon-save
                        | Save
                //li
                    a(ng-click='activitiExecuteBpmn()', href='', title='activiti')
                        span.glyphicon.glyphicon-export
                        | Execute
